@model MVCBlog.Models.Post


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="blog-post">
                                <div class="blog-thumb">
                                    <img src="@Model.Resim" alt="">
                                </div>
                                <div class="down-content">
                                    <a><h4>@Model.Baslik<h4></a>
                                    <ul class="post-info">
                                        <li><a>@Model.Kullanici.KullaniciAd</a></li>
                                        <li><a>@Model.EklenmeTarihi</a></li>
                                        <li><a></a></li>
                                    </ul>
                                    <p>
                                        @Model.Icerik
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item comments">
                                <div class="sidebar-heading">
                                    <hr />
                                </div>
                                <div class="content">
                                    <ul>
                                        <li>

                                            <div class="right-content">
                                                <h4>Ali Yıldız<span>Mayıs 16, 2020</span></h4>
                                                <p>Yorumyorumyorumyorumyorumyorumyorumyorum</p>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item submit-comment">
                                <div class="sidebar-heading">
                                    <h2>Yorum Yaz</h2>
                                </div>
                                <div class="content">

                                    <div class="row">

                                        <div class="col-lg-12">

                                            <textarea typeof="text" rows="3" id="yorum" placeholder="Yorumunuz" required=""></textarea>

                                        </div>
                                        <div class="col-lg-12">

                                            <button type="button" id="YorumYap" class="main-button">Gönder</button>

                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="sidebar-item categories">
                                <div class="sidebar-heading">
                                    <h2>Kategoriler</h2>
                                </div>
                                @{Html.RenderAction("KategoriListesi", "Kategori");}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
      $(document).ready(function(){
  $("button").click(function(){
    alert("Yorum yapmak için kayıt olunuz!");
  });
});
</script>
