@model MVCBlog.Models.Post   

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
}


<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="blog-post">
                                <div class="blog-thumb">
                                    <img src="@Model.Resim" style="width:730px; height:550px" alt="">
                                </div>
                                <div class="down-content">
                                    <a><h4>@Model.Baslik<h4></a>
                                    <ul class="post-info">
                                        <li><a>@Model.Kullanici.KullaniciAd</a></li>
                                        <li><a>@Model.EklenmeTarihi</a></li>
                                        <li><a></a></li>
                                    </ul>
                                    <p>
                                        @Model.Icerik
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item comments">
                                <div class="sidebar-heading">
                                    <hr />
                                </div>
                                <div class="content">
                                    @Html.Partial("YorumListele", Model.Yorums.ToList())

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item submit-comment">
                                <div class="sidebar-heading">
                                    <h2>Yorum Yaz</h2>
                                </div>
                                <div class="content">

                                    <div class="row">

                                        <div class="col-lg-12">

                                            <textarea type="text" rows="3" id="yorum" placeholder="Yorumunuz" required=""></textarea>

                                        </div>
                                        <div class="col-lg-12">

                                            <button type="submit" id="YorumYap" class="main-button">Gönder</button>

                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="sidebar-item categories">
                                <div class="sidebar-heading">
                                    <h2>Kategoriler</h2>
                                </div>
                                @{Html.RenderAction("KategoriListesi", "Kategori");}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts{
        <script type="text/javascript">
        $(function (){
            $("#YorumYap").click(function (){

                var yorumunuz=$("#yorum").val();
                $.ajax({
                    url:"/Post/YorumYap/",
                    data:{ yorum:yorumunuz, Postid:@Model.Id},
                    type:'POST',
                    dataType:'json',
                    success: function (data){
                        alert("Başarılı");
                    }
                });
            });
        })
        </script>

    }




</section>

